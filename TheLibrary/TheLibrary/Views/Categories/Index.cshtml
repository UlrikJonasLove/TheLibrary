@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>All Categories</h1>

<p>
    <a asp-action="AddCategory" class="btn btn-outline-success">Add New Category</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName) | @Html.DisplayFor(modelItem => item.Id)
                <hr />
            </td>
            <td>
                <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-outline-success">Edit</a> |
                <a asp-action="CategoryDetails" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a> |
                <a asp-action="RemoveCategory" asp-route-id="@item.Id" class="btn btn-outline-warning">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
